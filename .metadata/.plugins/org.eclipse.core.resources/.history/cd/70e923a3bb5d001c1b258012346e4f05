package br.com.generation.herança;

import java.util.Scanner;

public class Testando_Tudo {

	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		int idade;
		String nome;
		Cachorro c1 = new Cachorro();
		Cavalo c2 = new Cavalo();
		Preguica p1 = new Preguica();
		
		System.out.println("digite idade e o nome do cachorro: \r\n");
		idade=entrada.nextInt();
		nome=entrada.next();
		c1.setIdade(idade);
		c1.setNome(nome);
		System.out.println("digite idade e o nome do cavalo: \r\n");
		idade=entrada.nextInt();
		nome=entrada.next();
		c2.setIdade(idade);
		c2.setNome(nome);
		System.out.println("digite idade e o nome da preguiça: \r\n");
		idade=entrada.nextInt();
		nome=entrada.next();
		p1.setIdade(idade);
		p1.setNome(nome);
		
		System.out.println("a idade do cahorro é: \r\n"+c1.getIdade()+" e seu nome: \r\n"+c1.getNome());
		c1.correr();
		c1.emitir();

		System.out.println("a idade do cavalo é: \r\n"+c2.getIdade()+" e seu nome: \r\n"+c2.getNome());
		c2.correr();
		c2.emitir();
		
		System.out.println("a idade do cavalo é: \r\n"+p1.getIdade()+" e seu nome: \r\n"+p1.getNome());
		p1.subir();
		p1.emitir();
		entrada.close();
	}

}
